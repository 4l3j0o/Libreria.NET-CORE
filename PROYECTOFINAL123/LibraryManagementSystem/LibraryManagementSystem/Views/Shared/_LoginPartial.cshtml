@using Library.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{

        <a class="btn btn-sm btn-primary" asp-area="admin" asp-controller="Dashboard" asp-action="Index">
            Admin
        </a>

    <li class="nav-item">
            <a id="manage" class="nav-link text-dark fw-semibold px-3 py-2 rounded hover-bg" asp-area="Identity" asp-page="/Account/Manage/Index" title="Administrar"> @UserManager.GetUserName(User) </a>
    </li>
    <li class="nav-item ">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0 fw-semibold px-3 py-2 rounded hover-bg">Cerrar sesión</button>
        </form>
    </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-dark fw-semibold px-3 py-2 rounded hover-bg" id="register" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
        </li>
    <li class="nav-item">
            <a class="nav-link text-dark fw-semibold px-3 py-2 rounded hover-bg" id="login" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
    </li>
}
</ul>
