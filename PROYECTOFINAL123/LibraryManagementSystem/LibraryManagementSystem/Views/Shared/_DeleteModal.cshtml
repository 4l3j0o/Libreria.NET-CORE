@*
    _DeleteModal.cshtml
    Message box for delete messages.
*@
@{
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p id="confirmDeleteText">¿Estás seguro de que deseas eliminar?</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-danger" id="confirmYesBtn">Sí, eliminar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<!-- Success Delete Modal -->
<div class="modal fade" id="successModald" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center">
            <div class="modal-body">
                <p id="successMessage" class="mb-3">Eliminado correctamente.</p>
                <button type="button" class="btn btn-primary" id="successOkBtn">Aceptar</button>
            </div>
        </div>
    </div>
</div>