@using Library.Utilities
@model PagedResult<Library.ViewModels.PeriodicalViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Publicaciones periódicas</h1>

<form asp-action="Index" method="get">
    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" style="width: 400px"
        placeholder="Buscar por título de publicación" />
    <button type="submit" class="btn btn-primary">Buscar</button>
    <a asp-action="Index" class="btn btn-primary">Limpiar</a>
</form>
<p>
    <a asp-action="Create" class="btn btn-secondary">Crear nueva publicación periódica</a>
</p>
<table class="table table-stripped">
    <thead>
        <tr>
            <th>
                Código de ítem
            </th>
            <th>
                Título
            </th>
            <th>
                ISSN
            </th>
            <th>
                Frecuencia
            </th>

            <th>
                Tema
            </th>

            <th>
                Idioma
            </th>
            <th>
                Categoría
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISSN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Frequency)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Theme)

                <td>
                    @Html.DisplayFor(modelItem => item.Language.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>


                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Editar</a> |
                        <button class="btn btn-sm btn-danger"
                            onclick="openDeleteModal(@item.Id, '@item.Title', '@ViewContext.RouteData.Values["controller"]')">Eliminar</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<cs-pager cs-paging-pagesize=(int)Model.PageSize cs-paging-pagenumber=(int)Model.PageNumber
    cs-paging-totalitems=(int)Model.TotalItems cs-pagenumber-param="pageNumber" asp-controller="Periodical"
    asp-action="Index" cs-pager-li-current-class="page-item active" cs-pager-li-other-class="page-item"
    cs-pager-li-non-active-class="page-item disabled" cs-pager-link-current-class="page-link"
    cs-pager-link-other-class="page-link">
</cs-pager>
