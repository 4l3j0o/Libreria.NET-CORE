@using Library.Models
@model Library.ViewModels.BorrowingViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Registro de préstamos</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label">Nombre del miembro</label>
                <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemCopyId" class="control-label">Código de copia</label>
                <select asp-for="ItemCopyId" asp-items="Model.AvailableItemCopies" class="form-control"></select>
                <span asp-validation-for="ItemCopyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowedDate" class="control-label"></label>
                <input asp-for="BorrowedDate" class="form-control" />
                <span asp-validation-for="BorrowedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnedDate" class="control-label"></label>
                <input asp-for="ReturnedDate" class="form-control" />
                <span asp-validation-for="ReturnedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowedStatus" class="control-label"></label>
                <select asp-for="BorrowedStatus" class="form-control"
                    asp-items="Html.GetEnumSelectList<BorrowedStatus>()"></select>
                <span asp-validation-for="BorrowedStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
