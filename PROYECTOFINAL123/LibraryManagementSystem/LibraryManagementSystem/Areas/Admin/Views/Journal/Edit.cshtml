@using Library.Models
@using Library.ViewModels
@model Library.ViewModels.JournalViewModel

@{
    ViewData["Title"] = "Edit";
}

<style>
    .placeholder-option {
        color: #6c757d;
    }
</style>

<h1>Editar detalles de la revista</h1>

<hr />
<div class="container mt-3">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6 form-group">
                <label asp-for="ItemCode" class="control-label"></label>
                <input asp-for="ItemCode" class="form-control"
                    placeholder="El código debe tener el formato ITD-JR-00001." readonly />
                <span asp-validation-for="ItemCode" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="Title" class="control-label required">Título<span class="text-danger"> *</span></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="ISSN" class="control-label required">ISSN<span class="text-danger"> *</span></label>
                <input asp-for="ISSN" class="form-control" placeholder="ej.,####-#### " />
                <span asp-validation-for="ISSN" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="Description" class="control-label">Descripción</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="PublishedYear" class="control-label">Año de publicación</label>
                <select asp-for="PublishedYear" class="form-control">
                    <option value="" disabled selected class="placeholder-option">-- Selecciona año de publicación --
                    </option>
                    @for (var y = DateTime.UtcNow.Year; y >= 1900; y--)
                    {
                        <option value="@y" selected="@(Model.PublishedYear == y)">
                            @y
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="LanguageId" class="control-label required">Idioma<span class="text-danger">
                        *</span></label>
                <select asp-for="LanguageId"
                    asp-items="@(new SelectList(Model.Languages, nameof(LanguageViewModel.Id), nameof(LanguageViewModel.Name)))"
                    class="form-control">
                    <option value="" disabled selected class="placeholder-option">-- Selecciona idioma --</option>
                </select>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="CategoryId" class="control-label required">Categoría del ítem<span class="text-danger">
                        *</span></label>
                <select asp-for="CategoryId"
                    asp-items="@(new SelectList(Model.Categories.Where(c => c.ItemType == ItemType.Journal), nameof(CategoryViewModel.Id), nameof(CategoryViewModel.Name)))"
                    class="form-control">
                    <option value="" disabled selected class="placeholder-option">-- Selecciona categoría --</option>
                </select>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="PublisherId" class="control-label">Editorial</label>
                <select asp-for="PublisherId"
                    asp-items="@(new SelectList(Model.Publishers, nameof(PublisherViewModel.Id), nameof(PublisherViewModel.Name)))"
                    class="form-control">
                    <option value="" disabled selected class="placeholder-option">-- Selecciona editorial --</option>
                </select>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="Volume" class="control-label required">Volumen<span class="text-danger">
                        *</span></label>
                <select asp-for="Volume" class="form-control">
                    <option value="" disabled selected class="placeholder-option">-- Selecciona volumen --</option>
                    @for (var v = 1; v <= 100; v++)
                    {
                        <option value="@v">@v</option>
                    }
                </select>
                <span asp-validation-for="Volume" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="Issue" class="control-label required">Número<span class="text-danger"> *</span></label>
                <select asp-for="Issue" class="form-control">
                    <option value="" disabled selected class="placeholder-option">-- Selecciona número --</option>
                    @for (var i = 1; i <= 12; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Issue" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="FieldOfStudyId" class="control-label required">Área de estudio<span class="text-danger">
                        *</span></label>
                <select asp-for="FieldOfStudyId"
                    asp-items="@(new SelectList(Model.Fields, nameof(FieldOfStudyViewModel.Id), nameof(FieldOfStudyViewModel.Name)))"
                    class="form-control">
                    <option value="" disabled selected class="placeholder-option">-- Selecciona área de estudio --
                    </option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <br />
            <input type="submit" value="Guardar" class="btn btn-info" />
        </div>
    </form>
</div>

<br />
<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
